class Solution {
    public boolean isPowerOfFour(int n) {
        int flag=0;
        if(n==0) return false;

        while(n!=1){
            if(n%4!=0){
                flag=1;
                break;
            }
            else n=n/4;
        }
        if(flag==1) return false;
        else return true;
    }
}
