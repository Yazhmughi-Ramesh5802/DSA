//NOTE : I HAVE TAKEN 500 AS UPPERLIMIT IN FOR LOOP 
class Solution {
    public int smallestEvenMultiple(int n) {
        //int min=INTEGER.MAX_VALUE;
        int a = 0;
        int b = 0;
        for(int i=2;i<=500;i++){
            if(i%2==0 && i%n==0) return i;
        }
        return 1;
    }
}
