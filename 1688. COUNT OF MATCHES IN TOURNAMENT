class Solution {
    public int numberOfMatches(int n) {
        int count = 0;
        int a = 0;
        while(n!=1){
            if(n%2==0) {
                a=(n/2);
                count+=a;
            }
            else if(n%2==1) {
                a=(n/2)+1;
                count+=(a-1);
            }
            System.out.println(a+" "+count);
            n=a;

        }
        return count;
    }
}
