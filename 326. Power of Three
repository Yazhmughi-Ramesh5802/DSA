class Solution {
    public boolean isPowerOfThree(int n) {
        int flag=0;
        if(n==0) return false;
        while(n!=1){
            if(n%3!=0){
                flag=1;
                break;

            }
            else n=n/3;
        }
        if(flag==1) return false;
        else return true;
    }
}
